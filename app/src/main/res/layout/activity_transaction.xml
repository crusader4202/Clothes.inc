<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction">

    <TextView
        android:id="@+id/transactionHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction History"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:textColor="#FA9602"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/transactionHistoryDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactionHistoryTitle"
        android:text="View all the transaction you already pruchase"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:background="#FA2302"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:text="You have not made any transaction yet" />

</RelativeLayout>